<FirstPageScreen>:
    id: main
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba:(.038, .050, .056 , 1)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        size_hint_y:None
        height: 50  
        canvas.before:
            Color:
                rgba: (.038, .050, .056 , 1)
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            id:header
            text: 'Car Sale Managment'
            size_hint_y:None
            height:40
            font_size: 30
            bold: True
