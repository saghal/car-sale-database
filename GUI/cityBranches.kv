<FlatButton@ButtonBehavior+Label>:
    font_size: 14

<cityBranchesPageScreen>:
    id: main_win
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (.038, .050, .056 , 1)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        id: header
        size_hint_y: None
        height: 40
        canvas.before:
            Color:
                rgba: (.038, .050, .056 , 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: 'City Branches'
            size_hint_x: .9
            bold: True
            font_size: 25
            color: (1,1,1,1)

    BoxLayout:
        id: current
        size_hint_y: None
        height: 25

        canvas.before:
            Color:
                rgba: (.038, .050, .056 , 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: ''
            background_normal: ''
            background_color: (.038, .050, .056 , 1)
            size_hint_x: .6
        
        Button: 
            id: cur_price
            text: 'Back'
            background_normal: ''
            background_color: (.038, .050, .056 , 1)
            size_hint_x: .10
            on_release: root.BackToDashboard()


    BoxLayout:
        id: current
        size_hint_y: None
        height: 50
        canvas.before:
            Color:
                rgba: (.096, .125, .139, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: 'City:'
            background_normal: ''
            background_color: (.096, .125, .139, 1)
            size_hint_x: .2

        TextInput:
            id: cityName
            multiline: False

        Button:
            text: 'Search'
            background_normal: ''
            background_color: (.096, .125, .139, 1)
            size_hint_x: .4
            on_release: root.update_purchases()

  

    BoxLayout:
        padding: 10
        BoxLayout:
            id: product_details
            orientation: "vertical"
            size_hint_x: .8
            spacing: 10

            BoxLayout:
                id: product_labels
                size_hint_y: None
                height: 40
                canvas.before:
                    Color:
                        rgba: (.084,.110,.122, 1)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                    
                FlatButton:
                    text: 'BranchID'
                FlatButton:
                    text: 'Branch name'
                FlatButton:
                    text: 'City name'


            ScrollView:
                GridLayout:
                    id: city
                    size_hint_y:None
                    cols: 1
                    row_default_height: root.height*0.02
                    height: self.minimum_height
