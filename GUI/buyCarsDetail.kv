<FlatButton@ButtonBehavior+Label>:
    font_size: 14

<BuyCarPageScreen>:
    id: main_win
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (.038, .050, .056 , 1)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        id: header
        size_hint_y: None
        height: 40
        canvas.before:
            Color:
                rgba: (.038, .050, .056 , 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: 'Bought cars details'
            size_hint_x: .9
            bold: True
            font_size: 25
            color: (1,1,1,1)

    BoxLayout:
        id: current
        size_hint_y: None
        height: 25

        canvas.before:
            Color:
                rgba: (.038, .050, .056 , 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: ''
            background_normal: ''
            background_color: (.038, .050, .056 , 1)
            size_hint_x: .6
        
        Button: 
            id: cur_price
            text: 'Back'
            background_normal: ''
            background_color: (.038, .050, .056 , 1)
            size_hint_x: .10
            on_release: root.BackToDashboard()



    BoxLayout:
        padding: 10
        BoxLayout:
            id: product_details
            orientation: "vertical"
            size_hint_x: .8
            spacing: 10

            BoxLayout:
                id: product_labels
                size_hint_y: None
                height: 40
                canvas.before:
                    Color:
                        rgba: (.084,.110,.122, 1)
                    Rectangle:
                        size: self.size
                        pos: self.pos

                FlatButton:
                    text: 'CarID'                    
                FlatButton:
                    text: 'Model'
                FlatButton:
                    text: 'Company Name'
                FlatButton:
                    text: 'Color'
                FlatButton:
                    text: 'Car Type'
                FlatButton:
                    text: 'Prod year'
                FlatButton:
                    text: 'Fuel'
                FlatButton:
                    text: 'Millage'
                FlatButton:
                    text: 'Supplier'
                FlatButton:
                    text: 'city'
                FlatButton:
                    text: 'province'
                FlatButton:
                    text: 'Price'


            ScrollView:
                GridLayout:
                    id: car
                    size_hint_y:None
                    cols: 1
                    row_default_height: root.height*0.02
                    height: self.minimum_height
